<div class="container">

  <div class="row border-bottom mt-5">
    <p><i class="bi bi-person-fill ml-4 pr-2"></i>入力内容の確認</p>
  </div>
  <div class='row mt-3'>
    <p class='col-md-2'>名前：</p>
    <p class='col-md-2'><%= @contact.name %></p>
  </div>

  <div class='row mt-3'>
    <p class='col-md-2'>メールアドレス：</p>
    <p class='col-md-2'><%= @contact.email %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>お問合せ内容：</p>
    <p class='col-md-2'><%= @contact.message %></p>
  </div>
  <div class="row">
    <%= form_for(@contact) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :message %>
      <div class="col-md-5 mt-3"><%= f.submit '送信', class: 'btn btn-outline-dark mr-3' %></div>
    <% end %>
    <%= form_for @contact, url: back_path do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :message %>
      <div class="col-md-2 mt-3"><%= f.submit '入力画面に戻る', class:'btn btn-outline-secondary' %></div>
    <% end %>

