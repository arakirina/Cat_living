<div class="container m-5">
  <h5 class='row mt-4 ml-5'>新規登録</h5><br>
    
   <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-group row">
      <%= f.label 'name', class: 'col-md-3 col-form-label' %><br>
      <%= f.text_field :name, class:'col-md-3 form-control', placeholder: 'たま'  %>
    </div>
    
    <div class="form-group row">
      <%= f.label 'email', class: 'col-md-3 col-form-label' %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-md-3 form-control', placeholder: 'sample@sample.com'  %>
    </div>
    
    <div class="form-group row">
      <%= f.label 'password', class: 'col-md-3 col-form-label' %>
      <%= f.password_field :password, autocomplete: "new-password", class:'col-md-3 form-control' %>
    </div>
    
    <div class="form-group row">
      <%= f.label 'password(確認用)', class: 'col-md-3 col-form-label' %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'col-md-3 form-control' %>
    </div>
    
    <div class="actions form-group mt-5">
      <%= f.submit "新規登録", class:'col-md-4 btn btn-outline-dark mr-3' %>
      <%= link_to "ログイン" , user_session_path , class:'btn btn-outline-secondary'  %>
    </div>
   <% end %>
</div>

