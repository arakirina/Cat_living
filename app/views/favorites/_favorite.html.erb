<% if post.favorited_by?(current_user) %>
 <div id="favorite_buttons">
  <%= link_to post_favorites_path(post), class:"text-dark" , method: :delete , remote: true do %>
   <i class="bi bi-hand-thumbs-up-fill pr-2"></i><%= post.favorites.count %>
  <% end %>
 </div>
<% else %>
 <div id="favorite_buttons">
  <%= link_to post_favorites_path(post), class:"text-dark" , method: :post , remote: true do %>
   <i class="bi bi-hand-thumbs-up pr-2"></i><%= post.favorites.count %>
  <% end %>
 </div>
<% end %>