<div class="top-container">
 <div class="container">
   <div class="row border-bottom mt-5">
    <strong class="mb-3 ml-5">TOP PAGE</strong>
   </div>
   <div class="row pt-3">
    <div class="col-4">
     <div class="catelist mt-2 mb-2">
      <i class="bi bi-stars p-2"></i>
      <strong>ぽすとカテゴリ</strong>
     </div>
     <div class="catemain mt-4">
      <% @categories.each do |category| %>
       <ul class="border-bottom pb-3 pt-1">
        <li class="list-unstyled">
         <i class="bi bi-chevron-right"></i>
         <%#postのindexにカテゴリのIDを渡している。%>
         <%= link_to category.name, posts_path(:category_id => category.id), class:"text-dark" %>
        </li>
       </ul>
      <% end %>
      <%= render "posts/search" %>
     </div>
    </div>
    <div class="col-8 mt-4">
     <%= image_tag 'pomu.jpeg', size: '600x450' %>
    </div>
   </div>
 </div>
</div>