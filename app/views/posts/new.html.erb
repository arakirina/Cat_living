<div class="container m-5 mx-auto">
  <h5 class='row mt-4 ml-5'><i class="fas fa-pencil-alt nav-link text-dark">  新規投稿</i></h5><br>
  <%= form_with model: @post, local:true do |f| %>
   <div class="form-group row ml-3">
     <h6></h6><br>
     <%= f.text_field :title , class: 'col-md-3 col-form-label', placeholder: 'タイトルを入力してください' %>
   </div>
   <div class="form-group row ml-3">
     <h6></h6>
     <%= f.text_area :body , class: 'col-md-3 col-form-label' %>
   </div>
   <div class="actions form-group mt-4 ml-3">
     <%= f.submit '投稿' , class:'col-md-4 btn btn-outline-dark mr-3 w-25 mx-auto' %>
   </div>
  <% end %>
</div>