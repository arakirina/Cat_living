<div class="container">
 <div class="row border-bottom mt-5">
  <p><i class="bi bi-person-fill ml-4 pr-2"></i>登録情報の編集</p></p>
 </div>
  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group row pt-3">
     <%= f.label 'name', class: 'col-md-3 col-form-label' %><br>
     <%= f.text_field :name, class:'col-md-3 form-control custom-form-control' %>
    </div>
    <div class="form-group row pt-3">
     <%= f.label 'email', class: 'col-md-3 col-form-label' %><br>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-md-3 form-control custom-form-control'  %>
    </div>
    <div class="actions form-group mt-3">
     <%= f.submit "保存する", class:'col-md-4 btn btn-outline-dark mr-3 mt-4' %>
    </div>
  <% end %>
</div>
